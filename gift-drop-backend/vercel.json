{
  "version": 2,
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node",
      "config": { 
        "suppressResponse": false,
        "includeFiles": ["routes/**", "db.js", ".env"]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/.*",
      "dest": "index.js",
      "methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"]
    }
  ]
}